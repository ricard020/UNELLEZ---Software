<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SpinningTrainer.Views.ConfiguratorMenuView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Title="Configurador">
    <Grid BackgroundColor="{StaticResource PrimaryDark}">

        

            <Button
                Grid.Column="1"
                Margin="10,0,10,20"
                AbsoluteLayout.LayoutBounds="0.5,1,-1,-1"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="#0c192d"
                Clicked="btnCustomizeExercise_Clicked"
                ContentLayout="Top"
                CornerRadius="40"
                FontAttributes="Bold"
                FontSize="20"
                HeightRequest="220"
                HorizontalOptions="Center"
                ImageSource="{mi:Material Icon=MonitorHeart,
                                          IconSize=150}"
                Text="Personalizar Descanso"
                TextColor="White"
                VerticalOptions="Center"
                WidthRequest="260" />


           
       
    </Grid>
</ContentPage>