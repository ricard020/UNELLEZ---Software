<ContentPage
    x:Class="SpinningTrainer.Views.PreviewSingleReportView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Reporte de Sesión"
    BackgroundColor="White">

    <VerticalStackLayout>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                HorizontalOptions="Center"
                Text="Sí"
                VerticalOptions="Center" />

            <Button
                Grid.Row="1"
                HorizontalOptions="Center"
                Text="No"
                VerticalOptions="Center" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
